<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="302dp"
        android:layout_height="609dp"
        android:background="@drawable/rounded_corners_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ezra Schaefer"
            android:gravity="center"
            android:textColor="#A7AFB6"
            android:textSize="48sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/headshot" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="267dp"
            android:layout_height="103dp"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16sp"


            android:gravity="center"
            android:text="I'm a senior at Evansville Christian School. I have a interest in computer repair and networking. "
            android:textColor="#A7AFB6"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="267dp"
            android:layout_height="103dp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"

            android:gravity="center"
            android:text="I like Factorio, reading about the latest tech, and homelabbing. "
            android:textColor="#A7AFB6"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            app:srcCompat="@drawable/factorio" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>